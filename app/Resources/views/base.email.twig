{% block subject %}
{% endblock %}

{% block body_html %}
    <!DOCTYPE html>
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

        {% block styles %}
        {% endblock %}
    </head>

    <body style="margin: 0; padding: 0; background: #f2f2f2; height: 100%">

    {# Main table #}
    <table cellspacing="0" cellpadding="0" border="0" style="padding: 20px" width="100%">
        <tr>
            <td>
                {# Outer table #}
                <table align="center"
                       border="0"
                       cellpadding="0"
                       cellspacing="0"
                       width="620"
                       bgcolor="#ffffff"
                       valign="middle">

                    <tr>
                        <td style="padding: 20px 20px 20px 20px">

                            {# Inner table #}
                            <table border="0"
                                   style="border-color:#cfcfcf;"
                                   cellpadding="0"
                                   cellspacing="0"
                                   width="100%">
                                <tr>
                                    <td style="padding: 25px 25px 25px 25px; border: 1px solid #cfcfcf;">
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 35px 25px 35px 25px; border: 1px solid #cfcfcf; border-top: none;">

                                        <p style="margin: 0 0 0 0; color: #5d5d5d; font-family: Arial, 'sans-serif' ">{% block content %}{% endblock %}</p>

                                    </td>
                                </tr>
                                <tr>
                                    <td align="center"
                                        bgcolor="#f6f6f6"
                                        style="padding: 5px 25px 5px 25px; border: 1px solid #cfcfcf; border-top: none;">

                                        <p style="margin: 5px 0 5px 0; font-size: 12px; color: #5d5d5d; font-family: Arial, 'sans-serif' ">&copy;
                                            {{ "now"|date('Y') }} SoulDock. All rights reserved.</p>

                                    </td>
                                </tr>
                            </table>

                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    </body>
    </html>
{% endblock %}